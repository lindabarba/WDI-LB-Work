<p id="notice"><%= notice %></p>

<h1>Houses</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Bedrooms</th>
      <th>Baths</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @houses.each do |house| %>
      <tr>
        <td><%= house.address %></td>
        <td><%= house.bedrooms %></td>
        <td><%= house.baths %></td>
        <td><%= house.price %></td>
        <td><%= link_to 'Show', house %></td>
        <!-- the if current user at end is to hide links if no current user
        ie no one logged in  -->
        <td><%= link_to 'Edit', edit_house_path(house) if current_user %></td>
        <td><%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' } if current_user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New House', new_house_path if current_user %>
